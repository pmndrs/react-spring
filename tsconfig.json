{
  "compilerOptions": {
    "jsx": "react",
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2016", "dom"],
    "skipLibCheck": false
  },
  "include": ["tests/**/*.tsx", "types/**/*.ts"]
}
