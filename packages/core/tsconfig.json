{
  "include": ["src", "test"],
  "compilerOptions": {
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es2017", "DOM"],
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "module": "ESNext",
    "typeRoots": ["../../node_modules/@types", "../../@types"]
  }
}
