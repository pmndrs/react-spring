{
  "name": "react-spring--root",
  "private": true,
  "description": "Cross-platform animation engine for React",
  "repository": "pmndrs/react-spring",
  "homepage": "https://github.com/pmndrs/react-spring#readme",
  "keywords": [
    "animated",
    "animation",
    "hooks",
    "motion",
    "react",
    "react-native",
    "spring",
    "typescript",
    "velocity"
  ],
  "license": "MIT",
  "author": "Paul Henschel",
  "maintainers": [
    "Josh Ellis (https://github.com/joshuaellis)"
  ],
  "workspaces": {
    "packages": [
      "packages/*",
      "targets/*",
      "packages/parallax/@react-spring/parallax-demo",
      "demo",
      "docs"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "targets/*",
      "!packages/types"
    ]
  },
  "scripts": {
    "changeset:add": "changeset add",
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "dev": "preconstruct dev",
    "docs:dev": "yarn workspace @react-spring/docs dev",
    "docs:build": "yarn workspace @react-spring/docs build",
    "demo:dev": "yarn workspace @react-spring/demo dev",
    "postinstall": "preconstruct dev && remix setup node",
    "prepare": "husky install",
    "test:unit": "jest",
    "test:cov": "jest --coverage",
    "test:ts": "tsc --noEmit",
    "test:e2e": "start-server-and-test 'yarn vite serve packages/parallax/test --host' http-get://localhost:3000 'yarn cypress run'",
    "test": "yarn test:ts && yarn test:unit && yarn test:e2e",
    "release": "yarn test:ts && yarn test:unit && yarn build && yarn changeset publish && yarn",
    "vers": "yarn changeset version"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@changesets/cli": "^2.23.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@preconstruct/cli": "^2.1.5",
    "@react-three/fiber": "^8.0.27",
    "@remix-run/dev": "patch:@remix-run/dev@npm:1.6.2#.yarn/patches/@remix-run-dev-npm-1.6.2-282101bd70",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@studiocompanion/scripts": "^1.2.2",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@types/lodash.clamp": "^4.0.7",
    "@types/lodash.shuffle": "^4.2.7",
    "@types/mdx-js__react": "^1.5.5",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/react-native": "^0.69.1",
    "@types/styled-components": "^5.1.25",
    "@types/three": "^0.141.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "chokidar": "^3.5.3",
    "concurrently": "^7.2.2",
    "cypress": "^9.7.0",
    "cypress-image-snapshot": "^4.0.1",
    "flush-microtasks": "^1.0.1",
    "gray-matter": "^4.0.3",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "konva": "^8.3.10",
    "mock-raf": "npm:@react-spring/mock-raf@1.1.1",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-konva": "^18.2.1",
    "react-native": "^0.69.1",
    "react-zdog": "^1.0.11",
    "rollup": "^2.75.7",
    "spec.ts": "^1.1.3",
    "start-server-and-test": "^1.14.0",
    "three": "^0.142.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "vite": "^2.9.13",
    "zdog": "^1.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/react-spring"
  },
  "packageManager": "yarn@3.1.1"
}
