{
  "name": "react-spring",
  "version": "6.0.0",
  "description": "A set of spring-physics based animation primitives",
  "main": "dist/web.cjs.js",
  "module": "dist/web.js",
  "react-native": "dist/native.js",
  "typings": "index.d.ts",
  "files": [
    "dist",
    "src",
    "API.md",
    "index.d.ts"
  ],
  "sideEffects": false,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel rollup docz:build",
    "rollup": "rollup -c",
    "prepare": "npm run build",
    "test": "jest",
    "test:dev": "jest --watch --no-coverage",
    "test:coverage:watch": "jest --watch",
    "test:ts": "tsc --noEmit",
    "postinstall": "node -e \"console.log('\\u001b[35m\\u001b[1mEnjoy react-spring? You can now donate to our open collective:\\u001b[22m\\u001b[39m\\n > \\u001b[34mhttps://opencollective.com/react-spring/donate\\u001b[0m')\"",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "docz": "docz dev",
    "docz:build": "docz build && cp .docz/dist/index.html .docz/dist/200.html && cp examples/CNAME .docz/dist/CNAME"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "tabWidth": 2,
    "printWidth": 80
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drcmda/react-spring.git"
  },
  "keywords": [
    "react",
    "motion",
    "animated",
    "animation",
    "spring"
  ],
  "author": "Paul Henschel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drcmda/react-spring/issues"
  },
  "homepage": "https://github.com/drcmda/react-spring#readme",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-do-expressions": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-modules-commonjs": "^7.1.0",
    "@babel/plugin-transform-parameters": "^7.1.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/plugin-transform-template-literals": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-knobs": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "@types/react": "^16.4.18",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-react-docgen": "^2.0.0",
    "babel-plugin-transform-react-remove-prop-types": "0.4.19",
    "docz": "^0.12.5",
    "docz-theme-default": "^0.12.5",
    "grommet": "^1.11.0",
    "husky": "^1.1.2",
    "immer-wieder": "^1.1.5",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "mock-raf": "^1.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "react": "^16.6.0",
    "react-codemirror2": "^5.1.0",
    "react-dom": "^16.6.0",
    "react-helmet": "^5.2.0",
    "react-test-renderer": "^16.5.2",
    "react-testing-library": "^5.2.0",
    "react-transition-group": "^2.5.0",
    "react-twitter-widgets": "^1.7.1",
    "rimraf": "2.6.2",
    "rollup": "0.66.6",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-size-snapshot": "^0.7.0",
    "rollup-plugin-uglify": "^6.0.0",
    "styled-components": "^4.0.2",
    "typescript": "^3.1.3"
  },
  "peerDependencies": {
    "prop-types": "15.x.x",
    "react": ">= 16.4.0",
    "react-dom": ">= 16.4.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "jest"
    ],
    "testRegex": "test.js$",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html",
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/*.stories.js",
      "!test/"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setupTests.js"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/react-spring"
  }
}
